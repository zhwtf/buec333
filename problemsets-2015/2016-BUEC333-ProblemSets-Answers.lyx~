\begin_layout Section*
Prediction and Forecasting
\end_layout

\begin_layout Standard
1.
 Stock & Watson 14.1 
\end_layout

\begin_layout Enumerate
\begin_inset Formula $Y_{t}$
\end_inset

 is stationary so its probability distribution does not change over time.
 As a results expected value of 
\begin_inset Formula $Y_{t}$
\end_inset

 and 
\begin_inset Formula $Y_{t-1}$
\end_inset

 are the same.
 
\begin_inset Newline newline
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula 
\[
Y_{t}=\beta_{0}+\beta_{1}Y_{t-1}+u_{t}\Rightarrow E(Y_{t})=\beta_{0}+\beta_{1}E(Y_{t-1})
\]

\end_inset

From (a) we know 
\begin_inset Formula $E(Y_{t})=E(Y_{t-1})$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula 
\[
\Rightarrow E(Y_{t})=\beta_{0}+\beta_{1}E(Y_{t})
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow(1-\beta_{1})E(Y_{t})=\beta_{0}
\]

\end_inset


\begin_inset Formula 
\[
\Rightarrow E(Y_{t})=\beta_{0}/(1-\beta_{1})
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
2.
 
\end_layout

\begin_layout Enumerate
Using the result from 1(b), 
\begin_inset Formula $E(Y_{t})=\frac{\beta_{0}}{1-\beta_{1}}=\frac{2.5}{1-0.7}=8.33$
\end_inset

.
\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $Var(Y_{t})=Var(0.7Y_{t-1}+u_{t})=0.7^{2}Var(Y_{t-1})+Var(u_{t})=0.49Var(Y_{t})+Var(u_{t})$
\end_inset

 (Note that 
\begin_inset Formula $Var(Y_{t})=Var(Y_{t-1})$
\end_inset

 because 
\begin_inset Formula $Y_{t}$
\end_inset

 is stationary.)
\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $(1-0.49)Var(Y_{t})=9$
\end_inset

, 
\begin_inset space \space{}
\end_inset

and therefore 
\begin_inset Formula $Var(Y_{t})=9/(1-0.49)=17.647$
\end_inset

.
\end_layout

\end_deeper
\begin_layout Enumerate
\begin_inset Formula $Cov(Y_{t},Y_{t-1})=Cov(2.5+0.7Y_{t-1}+u_{t},Y_{t-1})=0.7Var(Y_{t-1})+Cov(u_{t},Y_{t-1})=0.7Var(Y_{t})=0.7\times17.647=12.3529$
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
\begin_inset Formula $Cov(Y_{t,}Y_{t-2})=Cov(2.5+0.7(2.5+0.7Y_{t-2}+u_{t-1})+u_{t},Y_{t-2})=Cov(0.49Y_{t-2}+0.7u_{t-1}+u_{t},Y_{t-2})=0.49Cov(Y_{t-2},Y_{t-2})+0.7Cov(u_{t-1,}Y_{t-2})+Cov(u_{t},Y_{t-2})=0.49Var(Y_{t-2})=0.49Var(Y_{t})=0.49\times17.647=8.64703$
\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
(not assigned)
\end_layout

\begin_layout Enumerate
\begin_inset Formula $Y_{T+1|T}=E(Y_{T+1}|Y_{T},Y_{T-1},...)=E(2.5+0.7Y_{T}+u_{t}|Y_{T,}Y_{T-1,...})=2.5+0.7Y_{T}=2.5+0.7\times102.3=74.11$
\end_inset

 
\end_layout

\begin_layout Standard
3.
 Let 
\begin_inset Formula $(Y_{1},Y_{2},Y_{3})=(-1,1,-1)$
\end_inset

.
 
\end_layout

\begin_layout Enumerate
Recall that 
\begin_inset Formula 
\[
\widehat{\mathrm{cov}(Y_{t},Y_{t-j})}=\frac{1}{T}\sum_{t=j+1}^{T}(Y_{t}-\bar{Y}_{j+1:T})(Y_{t-j}-\bar{Y}_{1:T-j})
\]

\end_inset

where 
\begin_inset Formula $T=3$
\end_inset

 and 
\begin_inset Formula $j=1$
\end_inset

 for this question (and note that both 
\begin_inset Formula $\bar{Y}$
\end_inset

s equal zero).
 Applying this formula we get 
\begin_inset Formula 
\[
\widehat{\mathrm{cov}(Y_{t},Y_{t-1})}=\frac{1}{3}\sqbrac[\Big]{(Y_{2}-0)(Y_{1}-0)+(Y_{3}-0)(Y_{2}-0)}=-\frac{2}{3}.
\]

\end_inset


\end_layout

\begin_layout Enumerate
Recall that 
\begin_inset Formula 
\[
\hat{\rho}_{j}=\frac{\widehat{\mathrm{cov}(Y_{t},Y_{t-j})}}{\widehat{\mathrm{var}(Y_{t})}}
\]

\end_inset

where 
\begin_inset Formula $j=1$
\end_inset

 for this question.
 Since 
\begin_inset Formula $\bar{Y}=\frac{1}{3}(-1+1-1)=-\frac{1}{3}$
\end_inset

, 
\begin_inset Formula 
\[
\widehat{\mathrm{var}(Y_{t})}=\frac{1}{2}\sqbrac*{\paren*{-1+\frac{1}{3}}^{2}+\paren*{1+\frac{1}{3}}^{2}+\paren*{-1+\frac{1}{3}}^{2}}=\frac{4}{3}
\]

\end_inset

Thus, 
\begin_inset Formula 
\[
\hat{\rho}_{1}=\frac{-2/3}{4/3}=-\frac{1}{2}.
\]

\end_inset


\end_layout

\begin_layout Enumerate
Yes, consider 
\begin_inset Formula $(0,0,0,0,0)$
\end_inset

.
 
\end_layout

