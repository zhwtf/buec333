\begin_layout Enumerate
\begin_inset Formula $\hat{Y}(X=20)=0.5681+0.1022(20)=2.6121$
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $ESS=0.5940$
\end_inset

, 
\begin_inset Formula $TSS=1.0288$
\end_inset

.
 Recall that 
\begin_inset Formula 
\[
R^{2}=\frac{ESS}{TSS}=\frac{\sum_{i}(\hat{Y}_{i}-\bar{Y})^{2}}{\sum_{i}(Y_{i}-\bar{Y})^{2}}
\]

\end_inset

Thus 
\begin_inset Formula $R^{2}=0.5774$
\end_inset

.
 
\end_layout

\begin_layout Standard
2.
 
\begin_inset Formula $\bar{X}=\bar{Y}=0$
\end_inset

 
\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $k=2$
\end_inset

 for 
\begin_inset Formula $i=1,\dots,6$
\end_inset

, 
\begin_inset Formula $Y_{i}=X_{i}$
\end_inset

 (i.e.
 
\begin_inset Formula $\hat{\beta}_{0}=0$
\end_inset

, 
\begin_inset Formula $\hat{\beta}_{1}=1$
\end_inset

), 
\begin_inset Formula $\hat{u}_{i}=Y_{i}-\hat{Y}_{i}=Y_{i}-X_{i}=0$
\end_inset

, 
\begin_inset Formula $SSR=\sum_{i}\hat{u}_{i}=0$
\end_inset

, 
\begin_inset Formula $R^{2}=1-\frac{SSR}{TSS}=1-0=1$
\end_inset


\end_layout

\begin_layout Enumerate
Given the formulae in equation 
\begin_inset CommandInset ref
LatexCommand eqref
reference "OLS"

\end_inset

 above, 
\begin_inset Formula 
\[
\hat{\beta}_{1}=\frac{5+k}{7},\qquad\text{and}\qquad\hat{\beta}_{0}=0
\]

\end_inset


\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $k=1$
\end_inset

, 
\begin_inset Formula $\hat{\beta}_{0}=0,\hat{\beta}_{1}=\frac{6}{7},\hat{Y}_{i}=\frac{6}{7}X_{i}$
\end_inset

.
 Thus 
\begin_inset Formula $R^{2}=\frac{ESS}{TSS}=\frac{144/7}{22}=\frac{72}{77}$
\end_inset


\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $k=3$
\end_inset

, 
\begin_inset Formula $\hat{\beta}_{0}=0,\hat{\beta}_{1}=\frac{8}{7},\hat{Y}_{i}=\frac{8}{7}X_{i}$
\end_inset

.
 
\begin_inset Formula $R^{2}=\frac{256/7}{38}=\frac{128}{133}$
\end_inset


\end_layout

\begin_layout Enumerate
If 
\begin_inset Formula $k=10$
\end_inset

, 
\begin_inset Formula $\hat{\beta}_{0}=0,\hat{\beta}_{1}=\frac{15}{7},\hat{Y}_{i}=\frac{15}{7}X_{i}$
\end_inset

.
 
\begin_inset Formula $R^{2}=\frac{900/7}{220}=\frac{45}{77}$
\end_inset


\end_layout

\begin_layout Enumerate
Given that 
\begin_inset Formula $\hat{\beta}_{0}=0$
\end_inset

 and 
\begin_inset Formula $\hat{\beta}_{1}=\frac{5+k}{7}$
\end_inset

, 
\begin_inset Formula $\hat{\beta}_{1}\to\infty$
\end_inset

 as 
\begin_inset Formula $k\to\infty$
\end_inset

.
 That is, the fitted line converges to a vertical line going through the
 origin.
 And since 
\begin_inset Formula $\hat{Y}_{i}=\frac{5+k}{7}X_{i}$
\end_inset

, 
\begin_inset Formula $ESS=\frac{1}{7}(100+4k^{2}+40k)$
\end_inset

, 
\begin_inset Formula $TSS=20+2k^{2}$
\end_inset

, and 
\begin_inset Formula 
\[
R^{2}=\frac{50+20k+2k^{2}}{70+7k^{2}}
\]

\end_inset


\begin_inset Formula $R^{2}\to\frac{2}{7}$
\end_inset

 as 
\begin_inset Formula $k\to\infty$
\end_inset

 
\end_layout

